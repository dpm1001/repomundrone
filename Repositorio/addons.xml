<addon id="plugin.video.mundrone"
       name="[COLOR silver]*[/COLOR][COLOR blue]MunDrone[/COLOR][COLOR silver]*[/COLOR]"
       version="0.0.3"
       provider-name="Creado por David">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.beautifulsoup4" />
    <import addon="script.module.requests" />
    <import addon="script.module.httplib2" />
    <import addon="script.module.liveresolver" version="0.1.24" optional="true"/>
    <import addon="script.module.youtube.dl" />
    <import addon="plugin.video.youtube"  />
    <import addon="script.module.urlresolver" />
    <import addon="script.module.simplejson" />
     <import addon="script.module.livestreamer" optional="true"/>
     <import addon="script.module.pyamf" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>

  <extension point="xbmc.addon.repository" name="Mi repositorio">
        <info>https://raw.githubusercontent.com/dpm1001/repomundrone/master/Repositorio/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/dpm1001/repomundrone/master/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/dpm1001/repomundrone/master/Repositorio/</datadir>
    </extension>

  <extension point="xbmc.addon.metadata">
    <summary>Creado por David con la ayuda de Lourdes, y por supuesto a @kodiacademy</summary>
    <description>Se irá actualizando contenido. Si quieres que tus vídeos aparezcan en MunDrone, envíalo a addonmundrone@gmail.com</description>
    <platform>all</platform>
  </extension>
</addon>

